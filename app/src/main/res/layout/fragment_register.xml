<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:background="#f5f5f5">


    <ImageView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@mipmap/register">
    </ImageView>

    <ImageView
        android:id="@+id/sex_selecter"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="28dp"
        android:src="@mipmap/sex_man"
        android:scaleType="center">
    </ImageView>

    <EditText
        android:id="@+id/name_register"
        android:background="@drawable/input_style"
        android:layout_marginTop="22dp"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:hint="用户名"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:paddingLeft="25dp"
        android:maxLines="1"
        android:inputType="text">
    </EditText>

    <EditText
        android:id="@+id/StudentId_register"
        android:background="@drawable/input_style"
        android:layout_marginTop="22dp"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:hint="学号"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:paddingLeft="25dp"
        android:maxLines="1"
        android:maxLength="10"
        android:inputType="number">
    </EditText>

    <EditText
        android:id="@+id/password_register"
        android:background="@drawable/input_style"
        android:layout_marginTop="22dp"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:hint="密码"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:paddingLeft="25dp"
        android:maxLines="1"
        android:inputType="textPassword">
    </EditText>

    <EditText
        android:id="@+id/department_register"
        android:background="@drawable/input_style"
        android:layout_marginTop="22dp"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:hint="学院"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:paddingLeft="25dp"
        android:maxLines="1"
        android:inputType="text">
    </EditText>

    <ImageView
        android:id="@+id/register_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:src="@mipmap/login">
    </ImageView>

    <TextView
        android:id="@+id/HaveAccount"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="已有账号，直接登录"
        android:textColor="#429ac8"
        android:layout_marginTop="15dp">
    </TextView>

    <Button
        android:id="@+id/ToBeacon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>